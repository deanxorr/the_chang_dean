<h1>Listing fruits</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Color</th>
    <th>Taste</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fruits.each do |fruit| %>
  <tr>
    <td><%= fruit.name %></td>
    <td><%= fruit.color %></td>
    <td><%= fruit.taste %></td>
    <td><%= link_to 'Show', fruit %></td>
    <td><%= link_to 'Edit', edit_fruit_path(fruit) %></td>
    <td><%= link_to 'Destroy', fruit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

